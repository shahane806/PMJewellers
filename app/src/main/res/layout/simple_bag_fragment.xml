<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homefragmentcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">



        <LinearLayout
            android:id="@+id/homefragmentcardlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/ProductImage"
                    android:layout_width="160dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bagicon" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/ProductName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"

                        android:gravity="center"

                        android:text="ProductName"
                        android:textColor="@color/googlebackgroundColor"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/ProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"

                        android:gravity="center"
                        android:text="ProductPrice"

                        android:textColor="@color/googlebackgroundColor"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/ProductCategory"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"

                        android:gravity="center"
                        android:text="ProductCategory"

                        android:textColor="@color/googlebackgroundColor"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/ProductOffers"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"

                    android:gravity="center"
                    android:text="Offers"

                    android:textColor="@color/googlebackgroundColor"
                    android:textSize="10sp" android:layout_weight="1"

                    />
                <Button
                    android:id="@+id/removeFromCart"
                    android:text="Remove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/Buy"
                    android:text="Buy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>